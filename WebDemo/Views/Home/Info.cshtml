@model  WebDemo.Models.RegistrationViewModel
@{
    ViewBag.Title = "Info";
}

@using (@Html.BeginForm("Info", "Home", FormMethod.Post, new { id = "myform", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>User Name</label>
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "მომხმარებლის სახელი" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "პაროლი" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "ემაილი" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>First Name</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "სახელი" })
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Last Name</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "გვარი" })
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
    </div>

    <div class="form-inline">
        @Html.RadioButtonFor(m => m.Gender, false)
        @Html.Label("Male")
        @Html.RadioButtonFor(m => m.Gender, true)
        @Html.Label("Female")
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>
}

<h2>Info</h2>
<h3>@ViewBag.Message</h3>
<h4>
    @{
        string tmp;
        if (Model.Gender) { tmp = "ქალაჩუნა"; } else { tmp = "კაცური კაცი"; }
    }
</h4>
@tmp