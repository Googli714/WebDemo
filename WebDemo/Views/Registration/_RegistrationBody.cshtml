@model  WebDemo.Models.RegistrationViewModel

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    <label>User Name</label>
    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "მომხმარებლის სახელი" })
    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Password</label>
    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "პაროლი" })
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Email</label>
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "ემაილი" })
    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
</div>
 
<div class="form-group">
    <label>First Name</label>
    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "სახელი" })
    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Last Name</label>
    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "გვარი" })
    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
</div>

<div class="form-inline">
    @Html.RadioButtonFor(m => m.Gender, false)
    @Html.Label("Male")
    @Html.RadioButtonFor(m => m.Gender, true)
    @Html.Label("Female")
</div>
<div class="form-group">
    @if (Convert.ToInt32(Session["RoleId"]) == 1)
    {
        @Html.DropDownListFor(x => x.RoleID, Model.RoleList, "Choose Role");
    }
</div>



<button type="submit" class="btn btn-primary">Submit</button>
