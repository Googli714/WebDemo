@model  WebDemo.Models.RegistrationViewModel

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    <label>User Name</label>
    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "მომხმარებლის სახელი" })
    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Password</label>
    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "პაროლი" })
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Email</label>
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "ემაილი" })
    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>First Name</label>
    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "სახელი" })
    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    <label>Last Name</label>
    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "გვარი" })
    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
</div>

<div class="form-inline">
    @Html.RadioButtonFor(m => m.Gender, false)
    @Html.Label("Male")
    @Html.RadioButtonFor(m => m.Gender, true)
    @Html.Label("Female")
</div>

<div class="form-group">
    @{
        IEnumerable<SelectListItem> Rolelist;
        Rolelist = new List<SelectListItem>()
        {
            new SelectListItem { Text = "administrator", Value = "1" },
            new SelectListItem { Text = "Guest", Value = "2" },
            new SelectListItem { Text = "Editor", Value = "3" }
        };
    }
    @Html.DropDownListFor(m => m.RoleId, Rolelist, "-select-", new { @class = "btn btn-danger dropdown-toggle" })
    @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "text-danger" })
</div>

<div class="form-inline">
    <button type="submit" class="btn btn-primary">Submit</button>
</div>